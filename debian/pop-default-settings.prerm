#!/bin/sh

set -e

case "$1" in
    remove)
        for f in lsb-release os-release gdm3/custom.conf
        do
            [ -L "/etc/$f" ] && rm "/etc/$f"
            dpkg-divert --remove --package pop-default-settings --rename --divert "/etc/$f.diverted" "/etc/$f"
        done
        ;;

    *)
        ;;
esac

#DEBHELPER#

exit 0
